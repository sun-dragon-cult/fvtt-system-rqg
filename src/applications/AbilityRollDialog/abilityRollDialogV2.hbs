<div class="standard-form">
  <header class="roll-header">
    <h1>{{abilityItem.name}}</h1>
    <div class="sub-header">{{abilityItem.system.chance}}%</div>
  </header>
  <div class="key-value-grid p-0 mb-1-5rem">
    <label>
      {{localize "RQG.Dialog.Common.Actor"}}
    </label>
    <div>{{speakerName}}</div>

    <label>
      {{localize "RQG.Dialog.AbilityRoll.Augment"}}
    </label>
    <select name="augmentModifier">
      {{selectOptions augmentOptions selected=formData.augmentModifier localize=true}}
    </select>

    <label>
      {{localize "RQG.Dialog.AbilityRoll.Meditate"}}
    </label>
    <select name="meditateModifier">
      {{selectOptions meditateOptions selected=formData.meditateModifier localize=true}}
    </select>

    <input type="text" style="text-align:end;font-weight:bold;" value="{{formData.otherModifierDescription}}" name="otherModifierDescription">
    <div>
      <input type="number" value="{{formData.otherModifier}}" name="otherModifier"> %
    </div>
  </div>
  <input type="hidden" value="{{formData.abilityItemUuid}}" name="abilityItemUuid">
  <input type="hidden" value="{{formData.reputationItemJson}}" name="reputationItemJson">
  <div class="flexrow flex-wrap gap1rem">
    <div class="target-box" data-tooltip="{{localize "RQG.Dialog.Common.TargetChance"}}">
      <i class="fa-solid fa-bullseye"></i><br>
      {{totalChance}}%
    </div>
    <div data-roll-mode-parent class="flexrow flex-nowrap flex-none buttongroup">
      <button type="button" class="ui-control icon fa-solid fa-globe {{#if (eq rollMode "publicroll")}}active{{/if}}" data-action="rollMode" data-roll-mode="publicroll" data-tooltip="{{localize "CHAT.RollPublic"}}"></button>
      <button type="button" class="ui-control icon fa-solid fa-user-secret {{#if (eq rollMode "gmroll")}}active{{/if}}" data-action="rollMode" data-roll-mode="gmroll" data-tooltip="{{localize "CHAT.RollPrivate"}}"></button>
      <button type="button" class="ui-control icon fa-solid fa-eye-slash {{#if (eq rollMode "blindroll")}}active{{/if}}" data-action="rollMode" data-roll-mode="blindroll" data-tooltip="{{localize "CHAT.RollBlind"}}"></button>
      <button type="button" class="ui-control icon fa-solid fa-user {{#if (eq rollMode "selfroll")}}active{{/if}}" data-action="rollMode" data-roll-mode="selfroll" data-tooltip="{{localize "CHAT.RollSelf"}}"></button>
    </div>
    <button data-ability-roll>{{localize "RQG.Game.Roll"}}</button>
  </div>
</div>
